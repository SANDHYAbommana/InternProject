<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/bgandroid"
    tools:context=".Smileyrating">

    <com.hsalf.smileyrating.SmileyRating
        android:id="@+id/smile_rating"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Smiley Rating"
        android:textColor="#3BFFD8"
        android:textSize="36sp"
        android:id="@+id/SRtext"
        android:textStyle="bold|italic" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SRtext"
        android:text="Provide your Valuable Rating using these Smileys..."
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="italic"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/smile_rating"
        android:text="Submit your Response"
        android:layout_marginTop="85dp"
        android:onClick="Submit"/>




</RelativeLayout>