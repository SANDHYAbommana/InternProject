<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgand"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FeedBack Form"
            android:textStyle="bold|italic"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="36sp"
            android:textColor="#FF6F22"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name"
            android:padding="15dp"
            android:hint="Enter Name"
            android:textColorHint="#000000"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="6dp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/number"
            android:hint="Enter number"
            android:textColorHint="#000000"
            android:padding="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_baseline_settings_phone_24"
            android:inputType="phone"
            android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/mail"
            android:hint="Enter your registered mail"
            android:textColorHint="#000000"
            android:padding="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/feedback"
            android:hint="Give FEEDBACK"
            android:textColorHint="#000000"
            android:padding="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/ic_baseline_dynamic_feed_24"
            android:layout_marginTop="15dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here for Smiley Rating"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:onClick="scrn2"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND FEEDBACK"
            android:layout_marginTop="15dp"
            android:id="@+id/button"
            android:textSize="20dp"/>
    </LinearLayout>
</ScrollView>
